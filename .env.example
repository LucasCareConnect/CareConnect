# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_NAME=careconnect

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Application Configuration
NODE_ENV=development
PORT=3000
APP_URL=careconnect://

# Notification Services Configuration
# Email Service
EMAIL_ENABLED=false
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@careconnect.com

# SMS Service (for mobile)
SMS_ENABLED=false
SMS_SERVICE=twilio
SMS_ACCOUNT_SID=your_twilio_account_sid
SMS_AUTH_TOKEN=your_twilio_auth_token
SMS_FROM=+1234567890

# Push Notification Service (for mobile)
PUSH_ENABLED=false
FCM_SERVER_KEY=your_firebase_server_key
APNS_KEY_ID=your_apns_key_id
APNS_TEAM_ID=your_apns_team_id
APNS_BUNDLE_ID=com.yourcompany.careconnect

# Security Configuration
BCRYPT_SALT_ROUNDS=12
PASSWORD_RESET_TOKEN_EXPIRY_MINUTES=15
MAX_PASSWORD_RESET_ATTEMPTS_PER_HOUR=3

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
